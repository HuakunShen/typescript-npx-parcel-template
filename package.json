{
  "name": "ts-npx-parcel-template",
  "version": "0.0.1",
  "description": "TypeScript npx template built with Parcel",
  "main": "dist/index.tmp.cjs",
  "source": "index.ts",
  "types": "dist/types.d.ts",
  "bin": "dist/index.cjs",
  "scripts": {
    "watch": "parcel watch",
    "add-shebang": "echo '#!/usr/bin/env node' > dist/index.cjs && cat dist/index.tmp.cjs >> dist/index.cjs",
    "prebuild": "rimraf dist",
    "build": "parcel build",
    "postbuild": "npm run add-shebang && rimraf dist/index.tmp.cjs",
    "start:ts": "ts-node index.ts",
    "start": "node dist/index.ts",
    "dev": "npx nodemon index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CrossCopy/crosscopy-cli.git"
  },
  "keywords": [
    "crosscopy"
  ],
  "author": "Huakun Shen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CrossCopy/crosscopy-cli/issues"
  },
  "homepage": "https://github.com/CrossCopy/crosscopy-cli#readme",
  "devDependencies": {
    "@parcel/packager-ts": "^2.6.0",
    "@parcel/transformer-typescript-types": "^2.6.0",
    "@types/chalk-animation": "^1.6.1",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.1",
    "@types/node": "^17.0.41",
    "nodemon": "^2.0.16",
    "parcel": "^2.6.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chalk-animation": "^1.6.0",
    "figlet": "^1.5.2",
    "inquirer": "^8.2.4"
  }
}
